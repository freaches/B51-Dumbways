<html>
    <head>
        <title>Project Detail</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
          @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
          
          * {
            font-family: 'Poppins', sans-serif;
          }

          .btn-primary{
          background-color: darkblue !important;
          }
  
          .active {
              color: orangered !important;
              font-weight: bold;
          }
      </style>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
          <div class="container">
              <a class="navbar-brand" href="/">
                  <img src="/image/logo.png" alt="logo"/>   
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-center">
                      <li class="nav-item">
                          <a class="nav-link active" href="/">Home</a>
                      </li>
                      {{#if isLogin}}
                      <li class="nav-item">
                          <a class="nav-link" href="/add-my-project">Add My Project</a>
                      </li>
                      {{/if}}
                      <li class="nav-item">
                          <a class="nav-link" href="/testimonial">Testimonial</a>
                      </li>
                  </ul>
                
                  <ul class="navbar-nav mb-2 mb-lg-0 d-flex justify-content-end me-2 text-center">
                      {{#if isLogin}}
                      <li class="nav-item">
                          <a class="nav-link text-danger active fw-semibold" href="#">Hallo, {{user}}</a>
                      </li>
                      <li class="nav-item ms-3">
                          <a class="nav-link" href="/logout">Logout</a>
                      </li>
                      {{else}}
                      <li class="nav-item ms-2">
                          <a class="nav-link" href="/register">Register</a>
                      </li>
                      <li class="nav-item ms-1">
                          <a class="nav-link text-danger active fw-semibold" href="/login">Login</a>
                      </li>
                      {{/if}}
                      <li class="nav-item ms-2">
                          <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                       </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid bg-secondary-subtle p-5">
          <div class="rounded bg-light p-5">
              <h1 class="text-center mb-4">{{content.title}} || {{content.id}}</h1>
              <div class="d-flex flex-wrap mb-5 justify-content-evenly">
                  <img src="/{{content.image}}" alt="makan" class="w-50 object-fit-scale" style="height: 400px"/>
                  <div class="align-self-center" style="width: 30%;">
                      <h2>Duration</h2>
                      <div class="mb-4">
                          <i class="fa-regular fa-calendar-days">&nbsp {{content.start_date}} - {{content.end_date}}</i><br><br>
                          <i class="fa-regular fa-clock">&nbsp {{content.duration}}</i>
                      </div>
                      <h2>Technologies</h2>
                      <div class="d-flex flex-wrap justify-content-between w-100">
                        {{{content.techs}}}
                      </div>
                  </div>
                  
              </div>
          <p class="fw-lighter fst-italic fs-6 px-3">Author : {{content.author}}</p>
          <p class="p-3">
            {{content.description}}
          </p>
        </div>
      </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>